# Application Configuration
APP_NAME=SharePoint Governance Platform
VERSION=1.0.0
API_PREFIX=/api/v1
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://spg_user:CHANGE_THIS_PASSWORD@db:5432/spg_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=300

# Microsoft 365 Configuration
# Get these from Azure AD App Registration
TENANT_ID=your-microsoft-tenant-id
CLIENT_ID=your-azure-app-client-id
CLIENT_SECRET=your-azure-app-client-secret
SHAREPOINT_SITE_URL=https://yourtenant.sharepoint.com

# Active Directory / LDAP
LDAP_SERVER=ldap://ad.company.com:389
LDAP_BASE_DN=dc=company,dc=com
LDAP_BIND_DN=cn=ServiceAccount,ou=ServiceAccounts,dc=company,dc=com
LDAP_BIND_PASSWORD=CHANGE_THIS_PASSWORD
LDAP_USER_SEARCH_BASE=ou=Users,dc=company,dc=com
LDAP_GROUP_SEARCH_BASE=ou=Groups,dc=company,dc=com

# JWT Authentication
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MINIMUM_32_CHARACTERS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (Frontend URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Background Jobs
SITE_DISCOVERY_SCHEDULE_CRON=0 2 * * *
AUDIT_SYNC_SCHEDULE_CRON=0 */6 * * *
ACCESS_REVIEW_SCHEDULE_CRON=0 0 1 */3 *
USER_SYNC_SCHEDULE_CRON=0 1 * * *

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# File Storage
FILE_STORAGE_PATH=/app/storage
MAX_UPLOAD_SIZE_MB=50

# Email Notifications (via Microsoft Graph)
EMAIL_FROM=noreply@company.com
EMAIL_ENABLED=true

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Security
PASSWORD_MIN_LENGTH=12
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MINUTES=30

# Performance
CACHE_ENABLED=true
CACHE_TTL_DASHBOARD_METRICS=30
CACHE_TTL_SITE_METADATA=3600
CACHE_TTL_PERMISSIONS=300

# Feature Flags
FEATURE_AI_ANOMALY_DETECTION=false
FEATURE_POWER_BI_INTEGRATION=false
FEATURE_MULTI_TENANT=false

# Retention Policy
AUDIT_LOG_RETENTION_MONTHS=12
ACCESS_REVIEW_RETENTION_YEARS=7
SYSTEM_LOG_RETENTION_DAYS=30

# Two-Factor Authentication (2FA)
TOTP_ISSUER_NAME=SharePoint Governance Platform
TOTP_DIGITS=6
TOTP_INTERVAL=30
BACKUP_CODES_COUNT=10
TRUSTED_DEVICE_EXPIRY_DAYS=30

# Setup Wizard
SETUP_COMPLETED=false
SETUP_ADMIN_EMAIL=admin@company.com

# Development Only (Remove in production)
RELOAD=false

